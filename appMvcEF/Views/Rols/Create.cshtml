@model appMvcEF.Models.Rol

@{
    Layout = null; // Asegúrate de que tu Layout esté configurado correctamente
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Crear Rol</title>
</head>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <!-- Contenido principal -->
        <div class="content-wrapper">
            <div class="container-fluid">
                <h1 class="mt-4">Crear Rol</h1>
                <hr />
                <div class="row">
                    <div class="col-md-6">
                        <form asp-action="Create">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="RolName" class="control-label"></label>
                                <input asp-for="RolName" class="form-control" />
                                <span asp-validation-for="RolName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Crear" class="btn btn-primary" />
                                <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
