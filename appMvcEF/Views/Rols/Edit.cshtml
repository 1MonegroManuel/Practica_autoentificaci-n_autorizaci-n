@model appMvcEF.Models.Rol

@{
    Layout = null; // Asegúrate de que tu Layout esté configurado correctamente
}

<!DOCTYPE html>
<html lang="es">
<head>
</head>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <!-- Contenido principal -->
        <div class="content-wrapper">
            <div class="container-fluid">
                <h1 class="mt-4">Editar Rol</h1>
                <hr />
                <div class="row">
                    <div class="col-md-6">
                        <form asp-action="Edit">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="RolId" />
                            <div class="form-group">
                                <label asp-for="RolName" class="control-label"></label>
                                <input asp-for="RolName" class="form-control" />
                                <span asp-validation-for="RolName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Guardar" class="btn btn-primary" />
                                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
